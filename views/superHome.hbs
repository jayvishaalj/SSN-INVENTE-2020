<section data-aos="fade-up" data-aos-duration="1000" id="ece_event-0" style="margin-top: 150px;">
    <div class="container">
        <div class="row text-center" data-aos="fade-up" data-aos-duration="1600" data-aos-once="true"
            style="margin-top: 68px;">
            <div class="col">
                <div class="login-dark"
                    style="background-image: url(&quot;assets/img/logo.png&quot;);background-size: contain;background-repeat: no-repeat;background-position: center;background-color: #000000;background: background: rgb(240,114,0);">
                    <form method="post" action="/super/update"
                        style="background-color: rgba(30,40,51,0.74);font-size: 16px;font-family: Roboto, sans-serif;">
                        <h2>User Payment Updation Form</h2>
                        <div class="illustration">
                            <i class="icon ion-cash" style="color: #f07200;"></i>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="regno"
                                placeholder="University Registration Number" required>
                        </div>
                        <div class="form-group">
                            <p>Amount Paid : </p>
                            <center>
                                <select name="amount" required>
                                    <option value="100" selected>₹100</option>
                                    <option value="150">₹150</option>
                                    <option value="250">₹250</option>
                                </select>
                            </center>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="transno" placeholder="Transaction Number"
                                required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit"
                                style="background-color: #f07200;">UPDATE
                                PAYMENT</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col">
                <div class="login-dark"
                    style="background-image: url(&quot;assets/img/logo.png&quot;);background-size: contain;background-repeat: no-repeat;background-position: center;background-color: #000000;background: background: rgb(240,114,0);">
                    <form method="post" action="/super/user/details"
                        style="background-color: rgba(30,40,51,0.74);font-size: 16px;font-family: Roboto, sans-serif;">
                        <h2>User Payment Details</h2>
                        <div class="illustration">
                            <i class="ion-ios-albums" style="color: #f07200;"></i>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="regno"
                                placeholder="University Registration Number" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit"
                                style="background-color: #f07200;">SHOW
                                PAYMENT</button>
                        </div>
                        {{#if searchedUserName}}
                        <div>
                            <h5>User Name : {{searchedUserName}}</h5>
                            <h5>Amount Paid : {{amountPaid}}</h5>
                        </div>
                        {{/if}}
                    </form>

                </div>
            </div>
        </div>
    </div>
    </div>
</section>