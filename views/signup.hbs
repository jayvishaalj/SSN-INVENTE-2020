<div class="register-photo" style="background-color: rgb(0,0,0);">
        <div class="form-container">
                <form method="post" style="background-color: rgba(0,0,0,0.79);">
                        <h2 class="text-center" style="color: #f07200;">Registration:<br></h2>
                        <div class="form-group"><input class="form-control" type="text" name="name" placeholder="Name"
                                        style="color: #f07200;" required=""></div>
                        <div class="form-group"><input class="form-control" type="email" name="email"
                                        placeholder="Email" style="color: #f07200;" required=""></div>
                        <div class="form-group"><input class="form-control" type="text" name="college"
                                        placeholder="College" style="color: #f07200;" required=""></div>
                        <div class="form-group"><input class="form-control" type="text" name="regno"
                                        style="color: #f07200;" required=""
                                        placeholder="Unique Identification Number (provided by college)"></div>
                        <div class="form-group"><input class="form-control" type="text" name="dept"
                                        style="color: #f07200;" required="" placeholder="Department"></div>
                        <div class="form-group"><input class="form-control-plaintext d-inline" type="text" readonly=""
                                        style="color: #f07200;" value="Year">
                                <div class="form-check form-check-inline"><input class="form-check-input" name="year"
                                                type="radio" id="formCheck-1"><label class="form-check-label"
                                                for="formCheck-1" style="color: #f07200;">1st
                                                year&nbsp;</label></div>
                                <div class="form-check form-check-inline"><input name="year" class="form-check-input"
                                                type="radio" id="formCheck-1"><label class="form-check-label"
                                                for="formCheck-1" style="color: #f07200;">2nd
                                                year&nbsp;</label></div>
                                <div class="form-check form-check-inline"><input name="year" class="form-check-input"
                                                type="radio" id="formCheck-1"><label class="form-check-label"
                                                for="formCheck-1" style="color: #f07200;">3rd
                                                year&nbsp;</label></div>
                                <div class="form-check form-check-inline"><input name="year" class="form-check-input"
                                                type="radio" id="formCheck-1"><label class="form-check-label"
                                                for="formCheck-1" style="color: #f07200;">4th
                                                year&nbsp;</label></div>
                        </div>
                        <div class="form-group"><input class="form-control" type="number" name="phno" max="10"
                                        placeholder="Phone Number"></div>
                        <div class="form-group"><input class="form-control" type="password" name="password"
                                        placeholder="Password" style="color: #f07200;" required=""></div>
                        <div class="form-group"><input class="form-control" type="password" name="passwordRepeat"
                                        placeholder="Password (repeat)" style="color: #f07200;" required=""></div>
                        <div class="form-group">
                                <div class="form-check"><label class="form-check-label" style="color: #f07200;"><input
                                                        class="form-check-input" type="checkbox">I agree to the license
                                                terms.</label></div>
                        </div>
                        <div class="form-group"><button class="btn btn-primary btn-block" type="submit"
                                        style="background-color: #f07200;">Sign Up</button></div><a class="already"
                                href="#" style="color: #f07200;">You already have an account? Login here.</a>
                </form>
        </div>
</div>